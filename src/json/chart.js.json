{
    "ChartTypes": [
        {
            "label": "Line Chart",
            "type": "line",
            "usage_description": "X axis ordinal",
            "constaints": {
                "xAxis": [
                    {
                        "domainType": "ordinal"
                    }
                ],
                "yAxis": [
                    {
                        "domainType": "ordinal",
                        "type": "number"
                    }
                ]
            }
        },
        {
            "label": "Bar Chart",
            "type": "bar",
            "usage_description": "X axis nominal, large data sets",
            "constraints": {
                "xAxis": [
                    {
                        "domainType": "nominal"
                    }
                ],
                "yAxis": [
                    {
                        "domainType": "ordinal"
                    }
                ]
            }
        },
        {
            "label": "Doughnut Chart",
            "type": "pie",
            "usage_description": "X axis nominal, Y axes values not too similar",
            "constraints": {
                "xAxis": [
                    {
                        "domainType": "nominal"
                    }
                ],
                "yAxis": [
                    {
                        "domainType": "ordinal",
                        "type": "number",
                        "range": "wild"
                    }
                ]
            }
        },
        {
            "label": "Bubble Chart",
            "type": "bubble",
            "usage_description": "X axis 2-composite, ordinal per field",
            "constraints": {
                "xAxis": [
                    {
                        "domainType": "ordinal"
                    },
                    {
                        "domainType": "ordinal"
                    }
                ],
                "yAxis": [
                    {
                        "domainType": "ordinal",
                        "type": "number"
                    }
                ]
            },
            "customRules": {
                "xAxis" : [
                    {
                        "key": "x"
                    },
                    {
                        "key": "y"
                    }
                ],
                "yAxis" : [
                    {
                        "key": "r"
                    }
                ]
            }
        }
    ],
    "AdditionalChartTypes": [
        {
            "label": "Radar Chart",
            "type": "radar"
        },
        {
            "label": "Polar Chart",
            "type": "polarArea"
        },
        {
            "label": "Scatter Chart",
            "type": "scatter"
        }
    ]
}